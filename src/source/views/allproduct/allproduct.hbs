          <div class="row mb-4">

            {{#each datas}}
            <div class="col-md-6 col-lg-4 mb-4">

              <div class="">

                <div class="view zoom z-depth-2 rounded">
                  <a href="/items/{{this.slug}}"> <img class="img-fluid w-100" style="height: 220px;" src="{{this.img}}"
                      alt="Sample"></a>

                  <a href="#!">
                    <div class="mask"></div>
                  </a>
                </div>

                <div class="text-center pt-4">

