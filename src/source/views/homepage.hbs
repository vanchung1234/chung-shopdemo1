<div class="label mt-4" id="pet" style="font-size: 40px;">Thú cưng</div>
<div class="row mt-4">
    {{#each pet}}
    <div class="col-sm-6 col-lg-4 mb-5">
        <div class="card" style="width: 18rem;">
            <a href="/items/{{this.slug}}">
                <img class="card-img-top" style="height: 250px;" src="{{this.img}}" alt="Card image cap"></a>

            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">{{this.cost}}M</p>
                <a href="/cart/add-to-cart/{{this._id}}" class="btn " id="cart_id" style="background-color: pink;">Buy</a>
            </div>
        </div>
    </div>
    {{/each}}

</div>
<div class="d-flex justify-content-center">
    <button type="button" class="btn btn-dark "><a class="btn-link" href="/product/all">Xem thêm</a></button>
</div>

