<style>
  .header-link {
    font-size: large;
    color: white;
    font-weight: 500;
  }

  .nav-margin {
    margin-left: 3rem;
  }

  .avatar {
    vertical-align: middle;
    width: 40px;
    height: 40px;
    border-radius: 50%;
  }

  .dropdown-toggle::after {
    display: none !important;

  }

  .user {
    margin-left: 6px;
    font-size: 16px;
    font-weight: 500;
    color: black;
  }
</style>

<nav class="navbar navbar-expand-lg navbar-expand-sm navbar-expand-sm|xs navbar-light bg-light  ">


  <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
    <a class="navbar-brand" href="/"><img src="/img/logo.png" style="height: 80px;" alt=""></a>



    <form method="GET" action="/product/search" class="form-inline my-5  my-lg-0 " style="margin-left: 40px;">
      <input class="form-control mr-sm-2" name="name" type="search" placeholder="Tìm kiếm tên sản phẩm">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">search</button>


    </form>

    <ul class="nav navbar-nav ml-4">
      <li>
        <a href="/cart/shopping-cart/" style="color: black;"><i class="fa fa-shopping-cart" aria-hidden="true"></i>
