          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="/users/logout">Đăng xuất</a>
        </div>
        {{else}}
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="/users/profile">Chỉnh sửa hồ sơ</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="/users/logout">Đăng xuất</a>
        </div>
