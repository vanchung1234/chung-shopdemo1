<style>
    .btn-qty {
        margin: -6px;
        border-radius: 3px;
        border: 2px solid rgb(201, 169, 169) ;
        background-color: palevioletred;
    }

    .btn-qty:hover {
        background-color: pink;
        cursor: pointer;
    }

    .quantity {
        width: 4rem;
        text-align: center;
    }
</style>
{{# if products }}
<section>

    <!--Grid row-->
    <div class="row">

        <!--Grid column-->
        <div class="col-lg-8">

            <!-- Card -->
            <div class="mb-3">
                <div class="pt-4 wish-list">

                    <h5 class="mb-4">Cart <span class="badge badge-pill badge-dark">{{session.cart.totalQty}}</span> </h5>


                    <hr class="mb-4">

                    {{# each products }}
                    <div class="row mb-4">
                        <div class="col-md-5 col-lg-3 col-xl-3">
                            <div class="view zoom overlay z-depth-1 rounded mb-3 mb-md-0">
                                <img class="img-fluid w-100"
                                    src="{{ this.item.img }}"
                                    alt="Sample">

                            </div>
                        </div>
                        <div class="col-md-7 col-lg-9 col-xl-9">
                            <div>
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h5>{{ this.item.name }}</h5>
                                        <p class="mb-3 mt-2 text-muted text-uppercase small">{{ this.item.desc }}</p>
                                         <p class="mb-3 mt-2 text-muted text-uppercase small">Giá: {{ this.item.cost }}M</p>
                                    </div>
                                    <div>
                                        <div class="def-number-input number-input safari_only mb-0 w-100">
                                            <a href="/cart/reduce/{{ this.item._id }}">
                                            <button
                                                onclick="this.parentNode.querySelector('input[type=number]').stepDown()"
                                                class="minus btn-qty" ><i class="fas fa-minus"></i></button>
                                                </a>
                                            <input class="quantity" min="0" name="quantity" value="{{ this.qty }}" type="number">
                                            <a href="/cart/add/{{this.item._id}}">
                                            <button
                                                onclick="this.parentNode.querySelector('input[type=number]').stepUp()"
                                                class="plus btn-qty"><i class="fas fa-plus"></i></i></button></a>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex  mt-4 justify-content-between align-items-center">
                                    <div>
                                        <a href="/cart/remove/{{ this.item._id }}" type="button"
                                            class="card-link-secondary small text-uppercase mr-3"><i
                                                class="fas fa-trash-alt mr-1"> Xóa món hàng</i> </a>
                                        <a href="#!" type="button" class="card-link-secondary small text-uppercase"><i
                                                class="fas fa-heart mr-1"> Yêu thích</i> </a>
                                    </div>
                                    <p class="mb-0"><span><strong>Tổng cộng: {{ this.cost }}M</strong></span></p class="mb-0">
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}


                    <p class="text-primary mb-0"><i class="fas fa-info-circle mr-1"></i> Xin đừng bom hàng :((</p>

                </div>
            </div>
            <!-- Card -->

            <!-- Card -->
            <div class="mb-3">
                <div class="pt-4">

                    <h5 class="mb-4">Dự kiến giao hàng</h5>

                    <p class="mb-0"> ngày 29 tháng 2.</p>
                </div>
            </div>
            <!-- Card -->

            <!-- Card -->
            <div class="mb-3">
                <div class="pt-4">

                    <h5 class="mb-4">Chúng tôi chấp nhận thanh toán bằng :</h5>

                    <img class="mr-2" width="45px"
                        src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"
                        alt="Visa">
                    <img class="mr-2" width="45px"
                        src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg"
                        alt="American Express">
                    <img class="mr-2" width="45px"
                        src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg"
                        alt="Mastercard">
                    <img class="mr-2" width="45px"
                        src="https://mdbootstrap.com/wp-content/plugins/woocommerce/includes/gateways/paypal/assets/images/paypal.png"
                        alt="PayPal acceptance mark">
                </div>
            </div>
            <!-- Card -->

        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-lg-4">

            <!-- Card -->
            <div class="mb-3">
                <div class="pt-4">

                    <h5 class="mb-3">Tổng số tiền thanh toán</h5>

                    <ul class="list-group list-group-flush">
                        <li
                            class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                           
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            SHIP
                            <span>Miễn phí</span>
                        </li>
                        <li
                            class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                            <div>
                                <strong>Tổng số tiền thanh toán</strong>
                                <strong>
                                    <p class="mb-0">(bao gồm VAT)</p>
                                </strong>
                            </div>
                            <span><strong>{{ totalcost }}M</strong></span>
                        </li>
                    </ul>

                  <a href="/cart/checkout" class="btn btn-primary btn-block">Thanh toán</a>  

                </div>
            </div>
            <!-- Card -->

          

        </div>
        <!--Grid column-->

    </div>
    <!-- Grid row -->

</section>
{{ else }}

    <div class="mt-4">
        <h2 style="text-align: center;">Bạn chưa thêm gì vào giỏ hàng</h2>
        <br>
        <a style="display: flex; justify-content: center; " href="/">Mua hàng</a>
    </div>

{{/if}}